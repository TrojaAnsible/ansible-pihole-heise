
# host server ip
SERVER_IP={{ hostvars[inventory_hostname]['ansible_default_ipv4']['address'] }}

# host name
SERVER_NAME={{ ansible_hostname }}-docker

CONTAINER_NET={{ CONTAINER_NET }}

# timezone
TZ='{{ timezone }}'

CACHE_SIZE=10000
DNS_BOGUS_PRIV=true
DNS_FQDN_REQUIRED=true
DNSMASQ_LISTENING=single
DNSSEC=false
TEMPERATUREUNIT=C

REV_SERVER={{ REV_SERVER }}
REV_SERVER_DOMAIN={{ REV_SERVER_DOMAIN }}
REV_SERVER_TARGET={{ REV_SERVER_TARGET }}
REV_SERVER_CIDR={{ REV_SERVER_CIDR }}


# docker images
pihole_image="{{ pihole_image }}"
stubby_image="{{ stubby_image }}"
dnscrypt_image="{{ dnscrypt_image }}"

# pihole webpassword. set environment variable outside
PIHOLE_WEB_PASSWORD='{{ pihole_web_password }}'

# custom config
DNSCRYPT_CONF={{ DNSCRYPT_CONF }}

STUBBY_CONF={{ STUBBY_CONF }}


